<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.timeshaft.after_end.mapper.GroupHeatMapper">

    <resultMap id="BaseResultMap" type="GroupHeat">
        <!--@Table group_heat-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="groupId" column="group_id" jdbcType="INTEGER"/>
        <result property="groupHeat" column="group_heat" jdbcType="INTEGER"/>
        <result property="messageCount" column="message_count" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, group_id, group_heat, message_count, type
        from timeshaft.group_heat
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, group_id, group_heat, message_count, type
        from timeshaft.group_heat
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, group_id, group_heat, message_count, type
        from timeshaft.group_heat
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="groupId != null">
                and group_id = #{groupId}
            </if>
            <if test="groupHeat != null">
                and group_heat = #{groupHeat}
            </if>
            <if test="messageCount != null">
                and message_count = #{messageCount}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into timeshaft.group_heat(group_id, group_heat, message_count, type)
        values (#{groupId}, #{groupHeat}, #{messageCount}, #{type})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update timeshaft.group_heat
        <set>
            <if test="groupId != null">
                group_id = #{groupId},
            </if>
            <if test="groupHeat != null">
                group_heat = #{groupHeat},
            </if>
            <if test="messageCount != null">
                message_count = #{messageCount},
            </if>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from timeshaft.group_heat where id = #{id}
    </delete>

</mapper>