<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.timeshaft.after_end.mapper.GroupMapper">

    <resultMap id="BaseResultMap" type="Group">
        <!--@Table group-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="masterId" column="master_id" jdbcType="INTEGER"/>
        <result property="notice" column="notice" jdbcType="VARCHAR"/>
        <result property="photo" column="photo" jdbcType="VARCHAR"/>
        <result property="buildtime" column="buildtime" jdbcType="TIMESTAMP"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
        <result property="private1" column="private" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, master_id, notice, photo, buildtime, status, private
        from timeshaft.group
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, master_id, notice, photo, buildtime, status, private
        from timeshaft.group
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, master_id, notice, photo, buildtime, status, private
        from timeshaft.group
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="masterId != null">
                and master_id = #{masterId}
            </if>
            <if test="notice != null and notice != ''">
                and notice = #{notice}
            </if>
            <if test="photo != null and photo != ''">
                and photo = #{photo}
            </if>
            <if test="buildtime != null">
                and buildtime = #{buildtime}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
            <if test="private1 != null">
                and private = #{private1}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into timeshaft.group(name, master_id, notice, photo, buildtime, status, private)
        values (#{name}, #{masterId}, #{notice}, #{photo}, #{buildtime}, #{status}, #{private1})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update timeshaft.group
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="masterId != null">
                master_id = #{masterId},
            </if>
            <if test="notice != null and notice != ''">
                notice = #{notice},
            </if>
            <if test="photo != null and photo != ''">
                photo = #{photo},
            </if>
            <if test="buildtime != null">
                buildtime = #{buildtime},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
            <if test="private1 != null">
                private = #{private1},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from timeshaft.group where id = #{id}
    </delete>

</mapper>