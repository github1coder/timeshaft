<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.timeshaft.after_end.mapper.GroupMessageStateMapper">

    <resultMap id="BaseResultMap" type="GroupMessageState">
        <!--@Table group_message_state-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="messageId" column="message_id" jdbcType="INTEGER"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="state" column="state" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, message_id, user_id, state
        from timeshaft.group_message_state
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, message_id, user_id, state
        from timeshaft.group_message_state
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, message_id, user_id, state
        from timeshaft.group_message_state
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="messageId != null">
                and message_id = #{messageId}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="state != null and state != ''">
                and state = #{state}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="messageId" useGeneratedKeys="true">
        insert into timeshaft.group_message_state(message_id, user_id, state)
        values (#{messageId}, #{userId}, #{state})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update timeshaft.group_message_state
        <set>
            <if test="messageId != null">
                message_id = #{messageId},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="state != null and state != ''">
                state = #{state},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from timeshaft.group_message_state where id = #{id}
    </delete>

</mapper>