<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.timeshaft.after_end.mapper.StarMapper">

    <resultMap id="BaseResultMap" type="Star">
        <!--@Table star-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="timeshaftId" column="timeshaft_id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, timeshaft_id, title, user_id
        from timeshaft.star
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, timeshaft_id, title, user_id
        from timeshaft.star
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, timeshaft_id, title
        from timeshaft.star
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="timeshaftId != null">
                and timeshaft_id = #{timeshaftId}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into timeshaft.star(timeshaft_id, title, user_id)
        values (#{timeshaftId}, #{title}, #{userId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update timeshaft.star
        <set>
            <if test="timeshaftId != null">
                timeshaft_id = #{timeshaftId},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="usertId != null">
                user_id = #{userId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from timeshaft.star where id = #{id}
    </delete>

</mapper>